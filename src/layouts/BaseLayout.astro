---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SEOHead from "@/components/SEOHead.astro";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
  type?: "website" | "product" | "article";
  noindex?: boolean;
  product?: {
    name: string;
    description: string;
    sku: string;
    price: number;
    currency: string;
    availability: "InStock" | "OutOfStock" | "PreOrder";
    brand?: string;
    category?: string;
    images?: string[];
    rating?: { value: number; count: number };
  };
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const {
  title,
  description = "Ihr Online-Shop fuer hochwertige Produkte",
  canonical,
  image,
  type = "website",
  noindex = false,
  product,
  breadcrumbs,
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SEOHead
      title={`${title} - Skibidoo Shop`}
      description={description}
      canonical={canonical}
      image={image}
      type={type}
      noindex={noindex}
      product={product}
      breadcrumbs={breadcrumbs}
    />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://unpkg.com" crossorigin />
    <link rel="dns-prefetch" href="https://unpkg.com" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="https://unpkg.com/htmx.org@2.0.4" as="script" crossorigin />
    <link rel="preload" href="https://unpkg.com/alpinejs@3.14.8/dist/cdn.min.js" as="script" crossorigin />

    <!-- Critical CSS (inline for FCP) -->
    <style is:inline>
      /* Critical above-the-fold styles */
      body { margin: 0; font-family: system-ui, -apple-system, sans-serif; }
      .flex { display: flex; }
      .min-h-screen { min-height: 100vh; }
      .flex-col { flex-direction: column; }
      .bg-gray-50 { background-color: #f9fafb; }
      [x-cloak] { display: none !important; }
      /* Skeleton loading animation */
      @keyframes shimmer {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
      }
      .skeleton {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
      }
    </style>

    <!-- HTMX - defer for non-blocking -->
    <script src="https://unpkg.com/htmx.org@2.0.4" defer></script>
    <!-- Alpine.js - defer for non-blocking -->
    <script defer src="https://unpkg.com/alpinejs@3.14.8/dist/cdn.min.js"></script>
  </head>
  <body class="flex min-h-screen flex-col bg-gray-50" hx-boost="true" x-data="{ cartOpen: false }">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Cart Sidebar (lazy loaded) -->
    <template x-if="cartOpen">
      <div>
        <div
          x-show="cartOpen"
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class="fixed inset-0 z-40 bg-black/50"
          @click="cartOpen = false"
        ></div>

        <aside
          x-show="cartOpen"
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="translate-x-full"
          x-transition:enter-end="translate-x-0"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="translate-x-0"
          x-transition:leave-end="translate-x-full"
          class="fixed right-0 top-0 z-50 h-full w-full max-w-md bg-white shadow-xl"
          @click.outside="cartOpen = false"
        >
          <div class="flex h-full flex-col">
            <div class="flex items-center justify-between border-b p-4">
              <h2 class="text-lg font-semibold">Warenkorb</h2>
              <button @click="cartOpen = false" class="p-2 hover:bg-gray-100 rounded-lg" aria-label="Schliessen">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <div
              id="cart-sidebar-content"
              class="flex-1 overflow-y-auto p-4"
              hx-get="/api/fragments/cart-sidebar"
              hx-trigger="load, cartUpdated from:body"
              hx-swap="innerHTML"
            >
              <div class="space-y-4">
                <div class="skeleton h-20 rounded-lg"></div>
                <div class="skeleton h-20 rounded-lg"></div>
              </div>
            </div>
          </div>
        </aside>
      </div>
    </template>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2" aria-live="polite"></div>

    <!-- Deferred non-critical scripts -->
    <script is:inline>
      // Intersection Observer for lazy loading sections
      if ('IntersectionObserver' in window) {
        const lazyLoadObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const el = entry.target;
              if (el.dataset.lazySrc) {
                el.src = el.dataset.lazySrc;
                delete el.dataset.lazySrc;
              }
              if (el.dataset.lazyBg) {
                el.style.backgroundImage = `url(${el.dataset.lazyBg})`;
                delete el.dataset.lazyBg;
              }
              el.classList.remove('lazy');
              lazyLoadObserver.unobserve(el);
            }
          });
        }, { rootMargin: '100px' });

        document.querySelectorAll('[data-lazy-src], [data-lazy-bg]').forEach(el => {
          lazyLoadObserver.observe(el);
        });
      }

      // HTMX event handlers
      document.body.addEventListener("htmx:afterSwap", function(evt) {
        if (evt.detail.target.id === "cart-count") {
          evt.detail.target.classList.add("animate-bounce");
          setTimeout(() => evt.detail.target.classList.remove("animate-bounce"), 500);
        }
      });

      // Toast notifications
      function showToast(message, type = "success") {
        const container = document.getElementById("toast-container");
        const toast = document.createElement("div");
        toast.className = "rounded-lg px-4 py-3 shadow-lg text-white transform transition-all duration-300 " + 
          (type === "success" ? "bg-green-500" : type === "error" ? "bg-red-500" : "bg-blue-500");
        toast.textContent = message;
        toast.setAttribute("role", "alert");
        container.appendChild(toast);
        
        // Animate in
        requestAnimationFrame(() => {
          toast.style.opacity = "1";
          toast.style.transform = "translateY(0)";
        });
        
        setTimeout(() => {
          toast.style.opacity = "0";
          toast.style.transform = "translateY(10px)";
          setTimeout(() => toast.remove(), 300);
        }, 3000);
      }

      document.body.addEventListener("showToast", function(evt) {
        showToast(evt.detail.message, evt.detail.type);
      });

      // Cart sidebar trigger
      document.body.addEventListener("htmx:trigger", function(evt) {
        if (evt.detail.name === "cartUpdated" && window.Alpine) {
          document.body._x_dataStack?.[0] && (document.body._x_dataStack[0].cartOpen = true);
        }
      });
    </script>
  </body>
</html>
