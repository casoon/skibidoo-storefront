---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ProductCard from "@/components/ProductCard.astro";
import { fetchProducts, fetchCategories } from "@/lib/api";

const { products } = await fetchProducts({ limit: 12 });
const categories = await fetchCategories();
---

<BaseLayout title="Startseite">
  <!-- Hero -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-800 py-20 text-white">
    <div class="mx-auto max-w-7xl px-4 text-center">
      <h1 class="text-4xl font-bold md:text-5xl">Willkommen bei Skibidoo</h1>
      <p class="mt-4 text-xl text-primary-100">Entdecken Sie hochwertige Produkte zu fairen Preisen</p>
      <a
        href="/category/alle"
        class="mt-8 inline-block rounded-lg bg-white px-8 py-3 font-semibold text-primary-600 transition-colors hover:bg-primary-50"
      >
        Jetzt shoppen
      </a>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-16">
    <div class="mx-auto max-w-7xl px-4">
      <h2 class="mb-8 text-2xl font-bold text-gray-900">Kategorien</h2>
      <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
        {categories.slice(0, 4).map((category) => (
          <a
            href={`/category/${category.slug}`}
            class="group relative overflow-hidden rounded-lg bg-gray-100 p-8 text-center transition-colors hover:bg-primary-50"
          >
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600">{category.name}</h3>
            {category.description && (
              <p class="mt-2 text-sm text-gray-500">{category.description}</p>
            )}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="bg-gray-100 py-16">
    <div class="mx-auto max-w-7xl px-4">
      <div class="mb-8 flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-900">Beliebte Produkte</h2>
        <a href="/category/alle" class="text-primary-600 hover:underline">Alle anzeigen &rarr;</a>
      </div>
      <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
        {products.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-16">
    <div class="mx-auto max-w-7xl px-4">
      <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
        <div class="text-center">
          <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="font-semibold">Geprüfte Qualität</h3>
          <p class="mt-2 text-sm text-gray-500">Alle Produkte sorgfältig geprüft</p>
        </div>
        <div class="text-center">
          <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-semibold">Schneller Versand</h3>
          <p class="mt-2 text-sm text-gray-500">Versand innerhalb von 24h</p>
        </div>
        <div class="text-center">
          <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-semibold">Sicher bezahlen</h3>
          <p class="mt-2 text-sm text-gray-500">SSL-verschlüsselte Zahlung</p>
        </div>
        <div class="text-center">
          <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
            </svg>
          </div>
          <h3 class="font-semibold">14 Tage Rückgabe</h3>
          <p class="mt-2 text-sm text-gray-500">Kostenlose Rücksendung</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
