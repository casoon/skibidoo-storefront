---
import BaseLayout from "@/layouts/BaseLayout.astro";

// Simulated user data (in production: check session/JWT)
const user = {
  firstName: "Max",
  lastName: "Mustermann",
  email: "max@example.com",
};

const orders = [
  { id: "ORD-2024-001", date: "28.11.2024", status: "delivered", total: 89.97, items: 3 },
  { id: "ORD-2024-002", date: "15.11.2024", status: "delivered", total: 149.50, items: 2 },
  { id: "ORD-2024-003", date: "02.11.2024", status: "delivered", total: 34.99, items: 1 },
];

const statusLabels: Record<string, string> = {
  pending: "In Bearbeitung",
  paid: "Bezahlt",
  shipped: "Versendet",
  delivered: "Geliefert",
  cancelled: "Storniert",
};

const statusColors: Record<string, string> = {
  pending: "bg-yellow-100 text-yellow-800",
  paid: "bg-blue-100 text-blue-800",
  shipped: "bg-purple-100 text-purple-800",
  delivered: "bg-green-100 text-green-800",
  cancelled: "bg-red-100 text-red-800",
};
---

<BaseLayout title="Mein Konto">
  <div class="mx-auto max-w-4xl px-4 py-8">
    <h1 class="mb-8 text-2xl font-bold">Mein Konto</h1>

    <div class="grid gap-8 md:grid-cols-3">
      <!-- Sidebar -->
      <nav class="space-y-1">
        <a href="/account" class="flex items-center gap-2 rounded-lg bg-primary-50 px-4 py-2 text-primary-700">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
          Uebersicht
        </a>
        <a href="/account/orders" class="flex items-center gap-2 rounded-lg px-4 py-2 text-gray-600 hover:bg-gray-50">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>
          Bestellungen
        </a>
        <a href="/account/wishlist" class="flex items-center gap-2 rounded-lg px-4 py-2 text-gray-600 hover:bg-gray-50">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
          Wunschliste
        </a>
        <a href="/account/addresses" class="flex items-center gap-2 rounded-lg px-4 py-2 text-gray-600 hover:bg-gray-50">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          Adressen
        </a>
        <a href="/account/settings" class="flex items-center gap-2 rounded-lg px-4 py-2 text-gray-600 hover:bg-gray-50">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          Einstellungen
        </a>
        <hr class="my-2" />
        <a href="/account/logout" class="flex items-center gap-2 rounded-lg px-4 py-2 text-red-600 hover:bg-red-50">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
          Abmelden
        </a>
      </nav>

      <!-- Main Content -->
      <div class="md:col-span-2 space-y-6">
        <!-- Welcome -->
        <div class="rounded-lg bg-white p-6 shadow">
          <h2 class="text-lg font-semibold">Hallo, {user.firstName}!</h2>
          <p class="mt-1 text-gray-600">Von hier aus koennen Sie Ihre Bestellungen verwalten und Ihre Kontodaten bearbeiten.</p>
        </div>

        <!-- Recent Orders -->
        <div class="rounded-lg bg-white p-6 shadow">
          <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-semibold">Letzte Bestellungen</h2>
            <a href="/account/orders" class="text-sm text-primary-600 hover:underline">Alle anzeigen</a>
          </div>

          <div class="space-y-4">
            {orders.slice(0, 3).map((order) => (
              <div class="flex items-center justify-between rounded-lg border p-4">
                <div>
                  <p class="font-medium">{order.id}</p>
                  <p class="text-sm text-gray-500">{order.date} - {order.items} Artikel</p>
                </div>
                <div class="text-right">
                  <p class="font-medium">{order.total.toFixed(2).replace(".", ",")} EUR</p>
                  <span class={`inline-block rounded-full px-2 py-0.5 text-xs ${statusColors[order.status]}`}>{statusLabels[order.status]}</span>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Quick Links -->
        <div class="grid grid-cols-2 gap-4">
          <a href="/account/addresses" class="rounded-lg border bg-white p-4 text-center hover:border-primary-300 hover:shadow">
            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /></svg>
            <p class="mt-2 font-medium">Adressen verwalten</p>
          </a>
          <a href="/account/settings" class="rounded-lg border bg-white p-4 text-center hover:border-primary-300 hover:shadow">
            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" /></svg>
            <p class="mt-2 font-medium">Passwort aendern</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
