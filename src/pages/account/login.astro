---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Anmelden">
  <div class="mx-auto max-w-md px-4 py-12">
    <div class="rounded-lg bg-white p-8 shadow">
      <h1 class="mb-6 text-2xl font-bold text-center">Anmelden</h1>

      <form id="login-form" hx-post="/api/auth/login" hx-swap="none" class="space-y-4">
        <div>
          <label for="email" class="mb-1 block text-sm font-medium text-gray-700">E-Mail</label>
          <input type="email" id="email" name="email" required class="w-full rounded border-gray-300 focus:border-primary-500 focus:ring-primary-500" />
        </div>

        <div>
          <label for="password" class="mb-1 block text-sm font-medium text-gray-700">Passwort</label>
          <input type="password" id="password" name="password" required class="w-full rounded border-gray-300 focus:border-primary-500 focus:ring-primary-500" />
        </div>

        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2">
            <input type="checkbox" name="remember" class="rounded border-gray-300 text-primary-600" />
            <span class="text-sm text-gray-600">Angemeldet bleiben</span>
          </label>
          <a href="/account/forgot-password" class="text-sm text-primary-600 hover:underline">Passwort vergessen?</a>
        </div>

        <button type="submit" class="w-full rounded-lg bg-primary-600 px-4 py-3 font-medium text-white hover:bg-primary-700">Anmelden</button>

        <div id="login-error" class="hidden rounded-lg bg-red-50 p-3 text-sm text-red-600"></div>
      </form>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">Noch kein Konto? <a href="/account/register" class="text-primary-600 hover:underline">Jetzt registrieren</a></p>
      </div>

      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-gray-200"></div></div>
        <div class="relative flex justify-center text-sm"><span class="bg-white px-4 text-gray-500">oder</span></div>
      </div>

      <button type="button" class="flex w-full items-center justify-center gap-2 rounded-lg border border-gray-300 px-4 py-3 hover:bg-gray-50">
        <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
        <span>Mit Google anmelden</span>
      </button>
    </div>
  </div>

  <script is:inline>
    document.getElementById("login-form").addEventListener("htmx:afterRequest", function(evt) {
      if (evt.detail.successful) {
        window.location.href = "/account";
      } else {
        const errorDiv = document.getElementById("login-error");
        errorDiv.textContent = "E-Mail oder Passwort falsch";
        errorDiv.classList.remove("hidden");
      }
    });
  </script>
</BaseLayout>
