---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ProductCard from "@/components/ProductCard.astro";
import { fetchProduct, fetchProducts } from "@/lib/api";
import { formatPrice, formatBasePrice, formatDeliveryTime } from "@/lib/format";

const { slug } = Astro.params;
const product = await fetchProduct(slug!);

if (!product) {
  return Astro.redirect("/404");
}

const { products: relatedProducts } = await fetchProducts({ limit: 4 });

const hasDiscount = product.compareAtPrice && product.compareAtPrice > product.price;
const discountPercent = hasDiscount
  ? Math.round((1 - product.price / product.compareAtPrice!) * 100)
  : 0;
---

<BaseLayout title={product.name} description={product.description || undefined}>
  <div class="mx-auto max-w-7xl px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-500">
      <a href="/" class="hover:text-primary-600">Startseite</a>
      <span class="mx-2">/</span>
      <a href="/category/alle" class="hover:text-primary-600">Produkte</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">{product.name}</span>
    </nav>

    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="aspect-square overflow-hidden rounded-lg bg-gray-100">
          {product.images?.[0] ? (
            <img
              src={product.images[0].url}
              alt={product.images[0].alt || product.name}
              class="h-full w-full object-cover"
            />
          ) : (
            <div class="flex h-full items-center justify-center text-gray-400">
              <svg class="h-24 w-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          )}
        </div>

        {product.images && product.images.length > 1 && (
          <div class="grid grid-cols-4 gap-4">
            {product.images.slice(1, 5).map((image, index) => (
              <button class="aspect-square overflow-hidden rounded-lg bg-gray-100">
                <img src={image.url} alt={image.alt || `${product.name} ${index + 2}`} class="h-full w-full object-cover" />
              </button>
            ))}
          </div>
        )}
      </div>

      <!-- Product Info -->
      <div>
        {hasDiscount && (
          <span class="mb-4 inline-block rounded bg-red-500 px-3 py-1 text-sm font-semibold text-white">
            -{discountPercent}% Rabatt
          </span>
        )}

        <h1 class="text-3xl font-bold text-gray-900">{product.name}</h1>

        {product.sku && (
          <p class="mt-2 text-sm text-gray-500">Art.Nr.: {product.sku}</p>
        )}

        <div class="mt-6 flex items-baseline gap-4">
          <span class="text-3xl font-bold text-gray-900">{formatPrice(product.price)}</span>
          {hasDiscount && (
            <span class="text-xl text-gray-500 line-through">{formatPrice(product.compareAtPrice!)}</span>
          )}
        </div>

        {product.basePrice && (
          <p class="mt-2 text-sm text-gray-500">
            Grundpreis: {formatBasePrice(product.basePrice)}
          </p>
        )}

        <p class="mt-2 text-sm text-gray-500">inkl. MwSt., zzgl. Versandkosten</p>

        {product.deliveryTime && (
          <p class="mt-4 flex items-center gap-2 text-sm text-green-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {formatDeliveryTime(product.deliveryTime)}
          </p>
        )}

        {product.stock > 0 ? (
          <p class="mt-2 text-sm text-green-600">Auf Lager ({product.stock} verfügbar)</p>
        ) : (
          <p class="mt-2 text-sm text-red-600">Derzeit nicht verfügbar</p>
        )}

        <!-- Add to Cart -->
        <div class="mt-8">
          <form
            hx-post="/api/cart/add"
            hx-target="#cart-count"
            hx-swap="innerHTML"
            class="flex items-center gap-4"
          >
            <input type="hidden" name="productId" value={product.id} />

            <div class="flex items-center rounded-lg border">
              <button type="button" class="px-4 py-2 text-gray-600 hover:text-gray-900" onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.dispatchEvent(new Event(change))">-</button>
              <input
                type="number"
                name="quantity"
                value="1"
                min="1"
                max={product.stock}
                class="w-16 border-0 text-center focus:ring-0"
              />
              <button type="button" class="px-4 py-2 text-gray-600 hover:text-gray-900" onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.dispatchEvent(new Event(change))">+</button>
            </div>

            <button
              type="submit"
              class="flex-1 rounded-lg bg-primary-600 px-8 py-3 font-semibold text-white transition-colors hover:bg-primary-700 disabled:bg-gray-300"
              disabled={product.stock === 0}
            >
              {product.stock === 0 ? "Ausverkauft" : "In den Warenkorb"}
            </button>
          </form>
        </div>

        <!-- Description -->
        {product.description && (
          <div class="mt-8 border-t pt-8">
            <h2 class="mb-4 text-lg font-semibold">Beschreibung</h2>
            <div class="prose prose-gray" set:html={product.description} />
          </div>
        )}
      </div>
    </div>

    <!-- Related Products -->
    {relatedProducts.length > 0 && (
      <section class="mt-16 border-t pt-16">
        <h2 class="mb-8 text-2xl font-bold text-gray-900">Das könnte Sie auch interessieren</h2>
        <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
          {relatedProducts.filter(p => p.id !== product.id).slice(0, 4).map((p) => (
            <ProductCard product={p} />
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>
